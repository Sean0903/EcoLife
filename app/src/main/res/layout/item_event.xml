<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.sean.green.ext.TimeUtil"/>
        <variable name="eventData" type="com.sean.green.data.Event" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/recyclerview_frame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="92dp"
                    app:imageUrl="@{eventData.image}"
                    app:layout_constraintBottom_toBottomOf="@+id/card_view_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/card_view_image"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@{eventData.userName}"
                app:layout_constraintBottom_toBottomOf="@+id/card_view_image"
                app:layout_constraintStart_toEndOf="@+id/card_view_image"
                tools:text="Kai Hsiang Liang" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="3dp"
                android:text="@{String.valueOf(eventData.eventTime)}"
                app:layout_constraintBottom_toBottomOf="@+id/image_item_event_host2"
                app:layout_constraintStart_toEndOf="@+id/image_item_event_host2"
                app:layout_constraintTop_toTopOf="@+id/image_item_event_host2"
                tools:text="2021.5.18  9:00" />

            <ImageView
                android:id="@+id/image_item_event_host2"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_view_image"
                app:srcCompat="@drawable/icon_calendar" />

            <ImageView
                android:id="@+id/image_item_event_host3"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_marginStart="32dp"
                app:layout_constraintBottom_toBottomOf="@+id/image_item_event_host2"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toTopOf="@+id/image_item_event_host2"
                app:srcCompat="@drawable/location" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:text="@{eventData.location}"
                app:layout_constraintBottom_toBottomOf="@+id/image_item_event_host3"
                app:layout_constraintStart_toEndOf="@+id/image_item_event_host3"
                app:layout_constraintTop_toTopOf="@+id/image_item_event_host3"
                tools:text="宜蘭烏石港" />

            <ImageView
                android:id="@+id/image_item_event_host4"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/image_item_event_host2"
                app:layout_constraintStart_toStartOf="@+id/image_item_event_host2"
                app:layout_constraintTop_toBottomOf="@+id/image_item_event_host2"
                app:srcCompat="@drawable/presentation" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:text="@{eventData.introduction}"
                app:layout_constraintBottom_toBottomOf="@+id/image_item_event_host4"
                app:layout_constraintStart_toEndOf="@+id/image_item_event_host4"
                app:layout_constraintTop_toTopOf="@+id/image_item_event_host4"
                tools:text="淨灘" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/dialog_edit_text_frame"
                android:text="@{eventData.content}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_item_event_host4"
                tools:text="之前去宜蘭玩的時候，看到沙灘的垃圾好多，我們一起去淨灘吧。" />

            <Button
                android:id="@+id/button_item_event_attend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="參加活動"
                app:layout_constraintEnd_toStartOf="@+id/button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活動結束"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/button_item_event_attend"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button_item_event_attend"
                app:layout_constraintTop_toTopOf="@+id/button_item_event_attend" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"

                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_item_event_attend"
                tools:text="活動目前145位會參與" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_event_image"
                listEventImage="@{eventData.memberImage}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_item_event_attend"
                tools:listitem="@layout/item_event_member_image" />

            <!--            android:text="@{@string/text_event_activity + eventData + @string/text_event_num}"-->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>