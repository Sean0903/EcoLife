<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.sean.green.data.Use" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/chart_daily_frame"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/item_chart_date_time"
                android:layout_width="84dp"
                android:layout_height="22dp"
                android:layout_marginStart="32dp"
                android:fontFamily="@font/noto_sans"
                android:paddingLeft="@dimen/elevation_all"

                android:textAlignment="center"
                android:textColor="@color/colorFlyingLemon1"
                android:textSize="@dimen/text_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="2020.10.11" />

            <TextView
                android:id="@+id/item_chart_date_use_plastic"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/noto_sans"

                android:textAlignment="center"
                android:textColor="@color/colorFlyingLemon1"
                android:textSize="@dimen/text_content"
                app:layout_constraintBottom_toBottomOf="@+id/item_chart_date_time"
                app:layout_constraintStart_toEndOf="@+id/item_chart_date_time"
                app:layout_constraintTop_toTopOf="@+id/item_chart_date_time"
                tools:text="11" />

            <TextView
                android:id="@+id/item_chart_date_use_power"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/noto_sans"

                android:textAlignment="center"
                android:textColor="@color/colorFlyingLemon1"
                android:textSize="@dimen/text_content"
                app:layout_constraintBottom_toBottomOf="@+id/item_chart_date_use_plastic"
                app:layout_constraintStart_toEndOf="@+id/item_chart_date_use_plastic"
                app:layout_constraintTop_toTopOf="@+id/item_chart_date_use_plastic"
                tools:text="40" />

            <TextView
                android:id="@+id/item_chart_date_use_carbon"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/noto_sans"

                android:textAlignment="center"
                android:textColor="@color/colorFlyingLemon1"
                android:textSize="@dimen/text_content"
                app:layout_constraintBottom_toBottomOf="@+id/item_chart_date_use_power"
                app:layout_constraintStart_toEndOf="@+id/item_chart_date_use_power"
                app:layout_constraintTop_toTopOf="@+id/item_chart_date_use_power"
                tools:text="20" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>