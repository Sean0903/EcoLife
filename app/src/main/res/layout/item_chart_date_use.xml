<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.sean.green.data.Use" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_chart_date_time"
            android:layout_width="84dp"
            android:layout_height="22dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/noto_sans"
            android:paddingLeft="@dimen/elevation_all"
            android:text="@{viewModel.plastic}"
            android:textAlignment="center"
            android:textColor="@color/colorMyType"
            android:textSize="@dimen/text_content"
            app:layout_constraintEnd_toStartOf="@+id/item_chart_date_use_plastic"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2020.5.18"/>

        <TextView
            android:id="@+id/item_chart_date_use_plastic"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/noto_sans"
            android:text="@{viewModel.power}"
            android:textAlignment="center"
            android:textColor="@color/colorMyType"
            android:textSize="@dimen/text_content"
            app:layout_constraintBottom_toBottomOf="@+id/item_chart_date_time"
            app:layout_constraintEnd_toStartOf="@+id/item_chart_date_use_power"
            app:layout_constraintStart_toEndOf="@+id/item_chart_date_time"
            app:layout_constraintTop_toTopOf="@+id/item_chart_date_time"
            tools:text="18"/>

        <TextView
            android:id="@+id/item_chart_date_use_power"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/noto_sans"
            android:text="@{viewModel.carbon}"
            android:textAlignment="center"
            android:textColor="@color/colorMyType"
            android:textSize="@dimen/text_content"
            app:layout_constraintBottom_toBottomOf="@+id/item_chart_date_use_plastic"
            app:layout_constraintEnd_toStartOf="@+id/item_chart_date_use_carbon"
            app:layout_constraintStart_toEndOf="@+id/item_chart_date_use_plastic"
            app:layout_constraintTop_toTopOf="@+id/item_chart_date_use_plastic"
            tools:text="5"/>

        <TextView
            android:id="@+id/item_chart_date_use_carbon"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/noto_sans"
            android:text="@{viewModel.content}"
            android:textAlignment="center"
            android:textColor="@color/colorMyType"
            android:textSize="@dimen/text_content"
            app:layout_constraintBottom_toBottomOf="@+id/item_chart_date_use_power"
            app:layout_constraintStart_toEndOf="@+id/item_chart_date_use_power"
            app:layout_constraintTop_toTopOf="@+id/item_chart_date_use_power"
            tools:text="20"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>